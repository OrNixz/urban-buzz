<% layout("layouts/app") %>
<h1>Update Place</h1>
<form action="/places/<%= place._id %>?_method=PUT" method="POST">
    <div>
        <label for="title">Title: </label>
        <input type="text" name="place[title]" id="title" value="<%= place.title %>">
    </div><br>
    <div>
        <label for="price">Price: </label>
        <input type="text" name="place[price]" id="price" value="<%= place.price %>">
    </div><br>
    <div>
        <label for="description">Description: </label>
        <textarea name="place[description]" id="description" cols="30" rows="10"><%= place.description %></textarea>
    </div><br>
    <div>
        <label for="location">Location: </label>
        <input type="text" name="place[location]" id="location" value="<%= place.location %>">
    </div><br>
    <button type="submit">Save</button>
</form>